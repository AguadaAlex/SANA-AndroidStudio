        <item name="colorPrimaryDark">@color/colorVerdeD</item>
        <item name="colorAccent">@color/colorVerdeA</item>
        <item name="android:windowBackground">@color/colorVerdeA</item>
        <item name="colorControlHighlight">@color/colorVerdeP</item>
