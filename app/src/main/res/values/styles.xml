        <item name="colorPrimary">@color/colorAzulP</item>
        <item name="colorPrimaryDark">@color/colorAzulD</item>
        <item name="colorAccent">@color/colorAzulA</item>
        <item name="android:windowBackground">@color/colorAzulA</item>
        <item name="colorControlHighlight">@color/colorAzulP</item>
        <item name="colorButtonNormal">@color/colorAzulD</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
