        <item name="android:windowAnimationStyle">@style/AnimacionEntreActividades</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Verde" parent="AppTheme">
        <item name="colorPrimary">@color/colorVerdeP</item>
